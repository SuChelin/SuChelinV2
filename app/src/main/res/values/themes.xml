<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SuchelinV2" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#003670</item>
        <item name="colorSecondary">#7399C1</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="FloatingButtonTheme">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="rippleColor">#6893A4</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.SuchelinV2" parent="Base.Theme.SuchelinV2" />

    <style name="Theme.SplashScreen.ShyPolarBear" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SuchelinV2</item>
    </style>
</resources>