<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/map_store_parent"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="7dp"
            android:background="@drawable/bg_white_round_10"
            android:visibility="visible"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:layout_centerVertical="true"
                android:id="@+id/map_store_cardView"
                android:layout_width="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="@null"
                app:elevation="@null"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="15dp">

                <ImageView
                    android:id="@+id/map_store_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_contact" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/map_store_cardView"
                android:layout_alignBottom="@+id/map_store_cardView"
                android:layout_marginStart="15dp"
                android:layout_toStartOf="@+id/map_store_michelin_imageView"
                android:layout_toEndOf="@+id/map_store_cardView"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/map_store_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:gravity="start"
                    android:fontFamily="@font/jamsil_thickness2"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="와우당" />

                <TextView
                    android:id="@+id/map_store_detail_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/jamsil_thickness1"
                    android:gravity="start"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="와우당" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>